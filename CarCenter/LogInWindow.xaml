<Window x:Class="CarCenter.LogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarCenter"
        mc:Ignorable="d"
        Title="Вход" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="6 20 5 5">
            <TextBlock>Логин</TextBlock>
            <TextBox x:Name="LoginTextBox" Margin="5 0 0 0" Width="200" MaxLength="20"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 5 5">
            <TextBlock>Пароль</TextBlock>
            <TextBox x:Name="PasswordTextBox" Margin="5 0 0 0" Width="200" MaxLength="20"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5 5 5 5">
            <Button x:Name="LoginButton" Width="90" Click="LoginButton_Click">Войти</Button>
        </StackPanel>
    </Grid>
</Window>
